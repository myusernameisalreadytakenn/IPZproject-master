
<form action="/user" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>Назва функції</label>
        <input type="text" class="form-control" name="fullName" placeholder="Назва функції" value="{{user.fullName}}">
        <div class="text-danger">
            {{user.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Функція</label>
        <input id="inp_create" type="text" class="form-control" name="name" placeholder="Функція" value={{user.name}}>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Добавити</button>

    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Назва функції</th>
            <th>Функція</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.name}}</td>
            <td>
              <div class="row ">
                <!--
                <div class=" col-md-8">
                  <button id="{{this.name}}" type="submit" class="btn btn-info" value="{{this.name}}" onclick="get_value_db()"><span class="fas fa-hammer" ></span></button>
                </div>
              -->
                <div class="col-md-2">
                  <div class="row">
                    <a href="/user/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="/user/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                  </div>

                </div>
              </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
